<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoterList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->s
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/actionBar</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme_activityMain" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme_MainActivity" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="Theme_searchActivity" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="ListPersonActivity" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:label">@string/voters</item>
        <item name="android:background">@color/white</item>
        <item name="mock_labelColor">@color/black</item>
    </style>

    <style name="Theme_loadingScreen" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="background">@android:color/darker_gray</item>
    </style>

    <style name="Button.yellow" parent="ThemeOverlay.AppCompat">
        <item name="color">@color/yellow</item>
        <item name="android:drawable">@drawable/custom_gender_outline</item>
    </style>

    <style name="Button.voter" parent="ThemeOverlay.AppCompat">
        <item name="color">@color/red</item>
        <item name="android:drawable">@drawable/ic_launcher_photo_foreground</item>
        <item name="android:radius">15dp</item>
        <item name="android:text">create voter</item>
    </style>

    <style name="counterOverFlowError" parent="ThemeOverlay.AppCompat">
        <item name="endIconMode">custom</item>
        <item name="endIconDrawable">@drawable/ic_launcher_wrong_foreground</item>
    </style>

    <style name="Theme_searchScreen">
       <item name="background">@android:color/transparent</item>
       <item name="android:background">@android:color/transparent</item>
   </style>

</resources>