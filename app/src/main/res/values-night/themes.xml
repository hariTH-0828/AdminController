<resources>
    <!-- Base application theme. -->
    <style name="Theme.VoterList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme_activityMain" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme_MainActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:radioButtonStyle">@color/white</item>
        <item name="android:label">@string/create_voter</item>
        <item name="labelStyle">@color/black</item>
    </style>

    <style name="Theme_updateActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="labelStyle">@color/black</item>
    </style>

    <style name="Theme_PhoneVerification" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="labelStyle">@color/black</item>
    </style>

    <style name="ListPersonActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:label">@string/voters</item>
    </style>

    <style name="Theme_searchActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:label">@string/search_voter</item>
    </style>

    <style name="Theme_HomeActivity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:colorPrimary">@color/black</item>
        <item name="actionBarStyle">@style/Theme_activityMain</item>
    </style>

    <style name="Theme_loadingScreen" parent="Theme.MaterialComponents.NoActionBar">
        <item name="background">@android:color/darker_gray</item>
    </style>
</resources>